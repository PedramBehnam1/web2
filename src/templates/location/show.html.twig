{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ location.name }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ location.shortDescription }}</td>
            </tr>
            <tr>
                <th>FullDescription</th>
                <td>{{ location.fullDescription }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ location.score }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ location.createdAt ? location.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ location.updatedAt ? location.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedUsername</th>
                <td>{{ location.createdUsername }}</td>
            </tr>
            <tr>
                <th>UpdatedUsername</th>
                <td>{{ location.updatedUsername }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ location.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ location.Latitude }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_location_index') }}">back to list</a>

    <a href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
