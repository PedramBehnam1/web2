{% extends 'base.html.twig' %}

{% block title %}Hotel index{% endblock %}

{% block stylesheets %}
    {{encore_entry_link_tags('hotel')}} 
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('hotel') }}
{% endblock %}
{#style="margin-left:30px"#}
{% block body %}
    <header class="container-fluid">
        <div class="row">
            <div class="col-4">
                <h1>Hotel index</h1>
            </div>
            <div class=" logo col-4  " >
                <img  src="{{asset("build/images/ghasr-talaee-mashhad.jpg")}} " style="width:80%; height:80%">
            </div>
            <div class=" logo col-4 " dir="rtl">
            <div class="m-5">
                <div class="input-group m-5">
                    <form class="form-inline" method="get" action="{{ path('app_hotel_search') }}">
                        <input class="form-control mr-sm-2" name="query" type="text" placeholder="Search..." aria-label="Search">
                    </form>
                    <input class="btn btn-outline-success my-2 my-sm-0" value="Search" type="submit">
                </div>
            </div>
               {{ knp_menu_render('main') }}
            </div>
        </div>
    </header>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>PhoneNumber</th>
                <th>Email</th>
                <th>Score</th>
                <th>CreateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hotel in hotels %}
            <tr>
                <td>{{ hotel.id }}</td>
                <td>{{ hotel.name }}</td>
                <td>{{ hotel.address }}</td>
                <td>{{ hotel.phoneNumber }}</td>
                <td>{{ hotel.email }}</td>
                <td>{{ hotel.score }}</td>
                <td>{{ hotel.createAt ? hotel.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_hotel_show', {'id': hotel.id}) }}">show</a>
                    {% if is_granted('ROLE_USER') %}
                        <a class="btn btn-warning" href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_USER') %}
        <a class="btn btn-primary"  href="{{ path('app_hotel_new') }}">Create new</a>
    {% endif %}
{% endblock %}
